{
    "env": {
        "node": true,
        "jquery": true,
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "object-shorthand": ["error", "always", { "ignoreConstructors": true }],
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "double"]
    }

}
