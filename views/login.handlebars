<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />

<style>
    /* Styling for login.handlebars*/
        #loginCard {
        max-width: 550px;
        opacity: 90%;
        box-shadow: 01px 0px 5px 3px rgba(24, 21, 21, 0.39);
        backdrop-filter: blur(20px);
        background-color: rgba(245, 244, 244, 0.863);
        margin: auto;
    }

    #loginHeader {
        font-family: 'Cinzel Decorative', cursive; 
        font-weight: 700;
        color: rgb(207, 205, 205);
        background-color:rgb(80, 130, 170);
        padding-top: 20px;
    }

    #loginBody {
      margin:auto;
      padding: 10px;
      width: 100%;
      font-family: 'Cinzel', serif;
      font-weight: 700;
      font-size: 18px;
    }
    /* Button for login page*/
    #loginBtn {
    font-family: 'Cinzel', serif;
    font-weight: bold;
    font-size: 18px;
    background-color: rgb(51, 148, 204);
    }
    #loginBtn:hover {
    background-color: rgb(91, 202, 247);
    }

</style>

<div id="loginCont" class="container">
<!-- LOGIN FORM -->
<div id="loginCard" class="text-center card" >
    <div id="loginHeader" class="card-header logo">
        <h3>Login</h3>
    </div>
    <!-- Main Form -->
    <div class="login-form-1" id="loginBody">
        <form action="/login" method="POST" id="login-form" class="text-left">
            <div class="login-form-main-message"></div>
            <div class="main-login-form">
                <div class="login-group">
                    <div class="form-group">
                        <label for="lg_username" class="sr-only">Username</label>
                        <input type="text" class="form-control" id="lg_username" name="lg_username" placeholder="username">
                    </div>
                    <div class="form-group">
                        <label for="lg_password" class="sr-only">Password</label>
                        <input type="password" class="form-control" id="lg_password" name="lg_password" placeholder="password">
                    </div>
                    <div class="form-group login-group-checkbox">
                        <input type="checkbox" id="lg_remember" name="lg_remember">
                        <label for="lg_remember">Remember me</label>
                    </div>
                </div>
                <button id="loginBtn" type="submit" class="login-button btn"><i class="fa fa-chevron-right"></i></button>
            </div>
            <div class="etc-login-form">
                <p>New user? <a href="/register">Create a new account</a></p>
            </div>
        </form>
    </div>
    <div class="card-footer text-muted">
        </div>
    </div>
</div>
    <!-- end:Main Form -->
