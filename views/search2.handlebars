<style>

   body {
        background-image: url(dancer-in-studio-wondows.jpg);
        background-size: cover;
    }
      #searchCard {
      margin:auto;
      margin-top: 100px;
      max-width: 550px;
      opacity: 90%;
      box-shadow: 01px 0px 5px 3px rgba(24, 21, 21, 0.39);
      backdrop-filter: blur(20px);
      background-color: rgba(245, 244, 244, 0.863);
      border-style: outset;
      border-color:rgba(37, 35, 35, 0.733);
      border-width: 3px;
    }

    #searchHeader {
      font-family: 'Cinzel Decorative', cursive; 
      font-weight: 700;
      color: white;
      background-color:rgb(4, 4, 78);
      padding-top: 20px;
    }

    #cardBody {
      margin:auto;
      max-width: 550px;
      font-family: 'Cinzel', serif;
      font-weight: 900;
      font-size: 18px;
    }

     #add {
      background-color:rgb(4, 4, 78);
      color: white;
      width: 75px;
    }

</style>

<div class="container">

<div class="card" id="searchCard">
  <div id="searchHeader" class="card-header text-center">
    <h3>Search dance class</h3>
  </div>
  <div class="card-body">

    <p>Please search a class by:</p>

{{!Select by teacher name}}
      <label for="teacher">Teacher's name:</label>
      <select name="teacherName" id="searchTeacher">

    {{#each instructors}}
        <option value= {{this.id}}>{{this.name}} , {{this.lastName}}</option>
    {{/each}}
      </select><br>

{{!Select by dance type}}
      <label>Dance style:</label>
      <select name="dance" id="searchStyle">
      
    {{#each dances}}
      <option value={{this.id}}>{{this.danceTitle}}</option>
    {{/each}}
      </select><br><br>

  <p>|| OR ||</p>

{{!Select by location}}
      <label>Location:</label>
      <select name="location" id="searchLocation">

    {{#each instructors}}
      <option value={{this.id}}>{{this.location}}</option>
    {{/each}}
      </select><br>

{{!Select by price}}
    <label>Price per Hour:</label>
    <select name="price" id="searchPrice">
    
    {{#each instructors}}
      <option value={{this.id}}>{{this.hourlyRate}}</option>
    {{/each}}
      </select><br>

{{!Select by rating -- commented out star icon}}
    <label>Rating:</label>
    <select name="rating" id="searchRating" placeholder="Out of 5 stars">
      
    {{#each instructors}}
      <option value={{this.id}}>{{this.rating}} {{!<i class="bi bi-star"></i>}} </option>
    {{/each}}
      </select><br><br>

  <div class="d-flex justify-content-center">
    <button id = "add" class="btn" type="button"> Search </button>
  </div>

  </div>

  
  <div class="card-footer text-muted">

  </div>
</div>
</div>
